<%= form_for(@event, data: {form_for: "event"}) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field h2">
    <%= f.text_field :name, placeholder: "name of the event" %>
  </div>
  <div class="field h4">
    <%= f.text_area :description, placeholder: "describe the event..." %>
  </div>
  <div class="field dt h4">
    <%= f.label :starts_at, "starts:" %>
    <%= f.datetime_select :starts_at %>
  </div>
  <div class="field dt h4">
    <%= f.label :ends_at, "ends:" %>
    <%= f.datetime_select :ends_at %>
  </div>
  <div class="field h3">
    <%= f.text_field :tag_list, placeholder: "add tags" %>
  </div>
  <div class="actions h2">
    <%= f.submit %>
  </div>

  <%= f.hidden_field :user_id, :value => current_user.id %>
<% end %>

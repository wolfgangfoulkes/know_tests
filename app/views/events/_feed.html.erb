<div class="event feed col">
  <% @events.each do |event| %>
    <% user = User.find(event.user_id) %>
    <div class="feed-item row">
      <span class="field h1"><%= link_to event.name, event %></span>
      <span class="field h2"><%= link_to user.name, user %></span>
      <div class="field tags h4"> 
        <%= event.tag_list %>
      </div>
      <span class="options row h3">
        <% if current_user.id == event.user_id %>
          <%= link_to 'Edit', edit_event_path(event) %>
          <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% elsif current_user.follows?(event) %>
          <%= link_to 'Unfollow', event_unfollow_path(event), method: :post %>
        <% else %>
          <%= link_to 'Follow', event_follow_path(event), method: :post %>
        <% end %>
      </span>
      
      
    </div>
  <% end %>
</div>


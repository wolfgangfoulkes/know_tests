<div id="bar-b" class="nav-bar row h2">
	<%= link_to "Calendar", url_for(
	    	:controller => 'schedule', 
	    	:action => 'calendar', 
	    	:date => @event.starts_at
    	),
    class: "item" %> |
<% if (can? :edit, @event) && (can? :destroy, @event) %>
	<%= link_to 'Edit', edit_event_path(@event), class: "item" %> |
	<%= link_to 'Destroy', @event, method: :delete, data: { confirm: 'Are you sure?' }, class: "item" %> 
<% else %>
	<div class="item">
		<%= render partial: "socializations/follow_button", locals: {socializable: @event} %>
	</div>
<% end %>
</div>
	
<div class="show head col">
	<div class="img-main"></div>

	<div class="field date">
	  <span class="h3"> 
	  	<%= @event.starts_at.to_formatted_s(:short) %> 
	  </span>
	  <span class="h2"> 
	  	- 
	  </span> 
	  <span class="h3"> 
	  	<%= @event.ends_at.to_formatted_s(:short) %> 
	  </span>
	</div>

	<div class="field title h1"> 
		<%= @event.name %> 
	</div>

	<div class="field user h5"> 
	  	<%= link_to @event.user.name, @event.user %> 
	</div>

	<div class="field tags h3"> 
        <%= @event.tag_list %>
    </div>
</div>

<div class="description h3">
   <%= @event.description %>
</div>

<div class="vmn"> </div>

<section class="col">
	<div class="h2"> Updates </div>
	<div class="comment-list col" 
		data-refresh="comments">
		<%= render @event.comments %>
	</div>
	<%= render partial: 'comments/form', 
	locals: { comment: @event.comments.build } 
	%>
</section>

<div class="vmn"> </div>

<section class="col">
	<div class="h2"> Questions </div>
	<%= content_tag :div, class: ["comment-list", "col"], data: {refresh: "questions"} do -%>
		<%= render @event.questions %>
	<% end -%>

	<%= render partial: 'questions/form', locals: 
	{ question: @event.questions.build } %>
</section>


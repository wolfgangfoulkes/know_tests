<div id="follow_form">
	<% if current_user.following?(@user) %>
		<%= form_for(current_user.active_relationships.find_by(followed_id: @user.id, followed_type: @user.class.name), html: { method: :delete }, remote: true) do |f| %>
			<%= f.submit "Unfollow" %>
		<% end %>
	<% else %>
		<%= form_for(current_user.active_relationships.build, remote: true) do |f| %>
	  		<div><%= hidden_field_tag :followed_id, @user.id %></div>
	  		<div><%= hidden_field_tag :followed_type, @user.class.name %></div>
	  		<%= f.submit "Follow" %>
		<% end %>
	<% end %>
</div>

<%= content_tag :div, class: ["item", "row", "h5"],
	data: { fresh: "#{fresh?(activity)}", role: activity.parameters[:role] } do %>
	<%= date_style(activity.created_at) %>
	<span class="username"> <%= activity.trackable.user.name %> </span>
	<span class="br"></span>
	<span class="summary"> <%= activity.trackable.summary %> </span>
<% end %>
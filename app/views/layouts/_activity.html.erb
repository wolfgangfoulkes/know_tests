<%= content_tag :div, class: ["item", "row"],
	data: { fresh: "#{fresh?(activity)}", role: activity.parameters[:role] } do %>
	<%= date_style(activity.created_at, classes: "h5") %>
	<span class="username h5"> <%= activity.trackable.user.name %> </span>
	<span class="br"></span>
	<span class="summary h5"> <%= activity.trackable.summary %> </span>
<% end %>
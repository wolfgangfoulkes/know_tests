<!DOCTYPE html>
<html>
<head>
  <title>Auth</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 
  	(controller.controller_name if javascript_exists?(controller.controller_name)),
  	("#{controller.controller_name}-#{controller.action_name}" if javascript_exists?("#{controller.controller_name}-#{controller.action_name}")),
  	'data-turbolinks-track' => true 
  %>
  <%= csrf_meta_tags %>
</head>

<body class="know <%= "#{controller.controller_name}-#{controller.action_name}" %>">

<div class="top-nav row"> 
<% if user_signed_in? %>
	<div class="top-nav-item">
		<%= link_to 'new', new_event_path, class: 'h2' %>
	</div>
	<div class="top-nav-item">
		<%= link_to 'home', root_path, class: 'h2' %>
	</div>
	<div class="top-nav-item">
		<%= link_to 'schedule', schedule_path, class: 'h2' %>
	</div>
	|
	<div class="top-nav-item">
		<%= link_to current_user.name, current_user, class: 'h2' %>
	</div>
	<div class="top-nav-item"> 
		<%= link_to "logout", destroy_user_session_path, method: :delete, 
		class: 'h2' %>
	</div>
<% else %>
<% end %>
</div>

<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>


<div class="page">
<%= yield %>
</div>

</body>

</html>

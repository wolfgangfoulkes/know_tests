<!DOCTYPE html>
<html>
<head>
  <title>Auth</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= page_specific_named_javascript(controller) %>
  <%= csrf_meta_tags %>
</head>

<body class="know"
	data-controller=
	<%= "#{controller.controller_name}" %>
	data-action=
	<%= "#{controller.action_name}" %>
	data-url= 
	<%= "#{request.fullpath}" %>
> 

<div id="bar-t" class="nav-bar row">
<% if user_signed_in? %>
	<div class="br"> </div>
	<%= svg_link new_event_path, 				name: "plus", 	  dir: "svg/icons", class: "item svg-link" %>
	<%= svg_link root_path, 	 				name: "home", 	  dir: "svg/icons", class: "item svg-link" %>
	<%= svg_link schedule_path,  				name: "calendar", dir: "svg/icons", class: "item svg-link" %>
	<%= svg_link activities_path, 				name: "alert", 	  dir: "svg/icons", class: "item svg-link" %>
	<%= svg_link user_path(current_user.id), 	name: "user", 	  dir: "svg/icons", class: "item svg-link" %>
	<%= svg_link destroy_user_session_path, 	name: "logout",   dir: "svg/icons", class: "item svg-link",
		data: { method: :delete }, 
		rel: "nofollow"
	%>
<% else %>
<% end %>
</div>




<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>
<% if flash[:dbug] %>
  <p class="alert alert-debug"><%= flash[:dbug] %></p>
<% end %>

<div class="know-page">
	<div class="vmn"> </div>
	<%= yield %>
</div>

</body>



<footer> <%= content_for :footer %> </footer>
</html>

<% if current_user.follows?(socializable) %>
	<%= link_to 'Unfollow', event_unfollow_path(socializable), method: :post, remote: true, data: { id: socializable.id }, class: "follow-button" %>
<% else %>
	<%= link_to 'Follow', event_follow_path(socializable), method: :post, remote: true, data: { id: socializable.id }, class: "follow-button" %>
<% end %>
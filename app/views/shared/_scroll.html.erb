<% content_for :footer do %>
	<%= javascript_include_tag "infinite_scroll" %>
<% end %>

<% unless (items.current_page == items.total_pages) %>
	<%= content_tag :div, data: { scroll_link: "1", current: items.current_page, total: items.total_pages } do %>
		<%= link_to('...', url_for(page: items.current_page + 1)) %>
	<% end %>
<% end %>


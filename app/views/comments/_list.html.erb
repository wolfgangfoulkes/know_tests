<div class="comment-list col">
	<% comments.each do |comment| %>
		<div class="item">
		  <div class="subject h4">
		    <%= comment.subject %>
		  </div>
		  <div class="content h5"> 
		    <%= comment.content %>
		  </div>
		  <div class="options h4">
		  	<% if can? :destroy, comment %>
			  	<%= link_to 'Destroy', url_for([comment.commentable, comment]), method: :delete, data: { confirm: 'Are you sure?' }, class: "item h4" %>
		  	<% end %>
		  </div>
		</div>
	<% end %>
</div>
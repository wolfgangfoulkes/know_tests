<% if can?(:read, comment) %>
  <%= content_tag :div, class: ["item"], 
  	data: {
      id: comment.id,
      fresh: "#{ fresh?(comment) }",
      role: comment.role,
      public: comment.public,
      owner: can?(:set_public, comment)
    } do %>
    <%= link_to comment.user.name, [comment], class: "username h4" %>
    <div class="content h5">
      <%= comment.comment %>
    </div>

    <%= link_to '...', "#", remote: true, class: "h4", 
        data: {drop: "snd", drop_id: "#{comment.id}-options", drop_state: "false"} %>
    <%= content_tag :div, class: ["options", "h4"], 
        data: {drop: "rcv", drop_id: "#{comment.id}-options", drop_state: "false"} do %>
          <%= render partial: "comments/links", locals: {comment: comment} %>
    <% end %>

  <% end %>
<% end %>
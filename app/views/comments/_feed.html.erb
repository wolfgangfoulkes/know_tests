<% comments = CommentsHelper.pagi(comments, page: params[:page]) %>

<%= content_tag :div, 
	class: ["comment-list", "col"],
	data: {refresh: comments.build.role, scroll_target: "1" } do
-%>
	<%= render comments.deef %>
<% end -%>
<%= render partial: 'comments/form',
	locals: 
	{
		comment: comments.build
	} 
%>
<%= scroll_link(items: comments, url: 
	url_for(
		controller: "comments", 
		action: "scroll", 
		page: comments.current_page + 1)
	) 
%>
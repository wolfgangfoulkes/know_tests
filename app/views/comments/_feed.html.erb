<% comments = CommentsHelper.pagi(comments, page: params[:page]) %>
<%= render partial: "layouts/paginate", 
	locals: {
		items: comments, target: comments.type,
		params: {controller: "comments", action: "paginate", role: comments.role}
	}
%>
<%= content_tag :div, 
	class: ["comment-list", "col"],
	data: {refresh: comments.type, pagi_target: comments.type } do
-%>
	<%= render comments.deef %>
<% end -%>

<%= render partial: 'comments/form',
	locals: 
	{
		comment: comments.build
	} 
%>
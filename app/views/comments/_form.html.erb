<% if can? :create, comment %>
  <%= form_for [comment.commentable, comment] do |f| %>
    <div class="field h4">
      <%= f.label :subject %><br>
      <%= f.text_field :subject %>
    </div>
    <div class="field h4">
      <%= f.label :content %><br>
      <%= f.text_area :content %>
    </div>
    <div class="actions h3">
      <%= f.submit %>
    </div>
  <% end %>
<% end %>

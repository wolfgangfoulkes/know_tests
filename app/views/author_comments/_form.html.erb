<% if can? :create, @author_comment %>
  <%= form_for(@author_comment) do |f| %>
    <div class="field h4">
      <%= f.label :subject %><br>
      <%= f.text_field :subject %>
    </div>
    <div class="field h4">
      <%= f.label :content %><br>
      <%= f.text_area :content %>
    </div>
    <div class="actions h3">
      <%= f.submit %>
    </div>
    <%= f.hidden_field :event_id %>
  <% end %>
<% end %>
